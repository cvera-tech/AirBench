@model AirBench.Models.ViewModels.BenchAddViewModel

@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

@using (Html.BeginForm("Add", "Bench", FormMethod.Post,
                htmlAttributes: new { id = "AddBenchForm" }))
{
    @Html.AntiForgeryToken()

    <fieldset>
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description,
            htmlAttributes: new { required = "required" })
        @Html.ValidationMessageFor(m => m.Description)
    </fieldset>
    <fieldset>
        @Html.LabelFor(m => m.Latitude)
        @Html.TextBoxFor(m => m.Latitude,
            htmlAttributes: new
            {
                required = "required",
                pattern = @"\d+",
                Value = ""
            })
        @Html.ValidationMessageFor(m => m.Latitude)
    </fieldset>
    <fieldset>
        @Html.LabelFor(m => m.Longitude)
        @Html.TextBoxFor(m => m.Longitude,
            htmlAttributes: new
            {
                required = "required",
                pattern = @"\d+",
                Value = ""
            })
        @Html.ValidationMessageFor(m => m.Longitude)
    </fieldset>
    <fieldset>
        @Html.LabelFor(m => m.NumberSeats)
        @Html.DropDownListFor(m => m.NumberSeats, Model.SeatsItems)
        @Html.ValidationMessageFor(m => m.NumberSeats)
    </fieldset>
    <input type="submit" id="Submit" value="Submit" class="btn btn-primary disabled" disabled />
    @Html.ActionLink("Cancel", "Index", "Bench",
        routeValues: new { },
        htmlAttributes: new { @class = "btn btn-default" })
}

@section Scripts {
    <script src="~/Scripts/add-bench-validation.js"></script>
}