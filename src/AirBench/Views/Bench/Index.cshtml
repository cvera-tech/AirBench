@{
    ViewBag.Title = "Benchiest Benches";
}

@section Scripts {
    <script src="~/Scripts/OpenLayers/ol.js"></script>
    <script src="~/Scripts/map-data.js"></script>
    <script src="~/Scripts/map.js"></script>
}

@section Stylesheets {
    <link rel="stylesheet" href="~/Scripts/OpenLayers/ol.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/map-style.css" type="text/css" />
}

<h2>Index</h2>

<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div id="map" class="map">
                <div id="popup" class="popup">
                    <div id="popup-content" class="popup-content"></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">

            <!-- Bench Details table -->
            <table id="bench-details" class="table hidden">
                <thead>
                    <tr>
                        <td>Description</td>
                        <td id="bench-description"></td>
                    </tr>
                    <tr>
                        <td>Latitude</td>
                        <td id="bench-latitude"></td>
                    </tr>
                    <tr>
                        <td>Longitude</td>
                        <td id="bench-longitude"></td>
                    </tr>
                    <tr>
                        <td>Seats</td>
                        <td id="bench-seats"></td>
                    </tr>
                    <tr>
                        <td>Average Rating</td>
                        <td id="bench-rating"></td>
                    </tr>
                    <tr>
                        <td>Added By</td>
                        <td id="bench-added-by"></td>
                    </tr>
                    <tr>
                        <td id="add-review" colspan="2"></td>
                    </tr>
                </thead>
                <tbody id="bench-reviews">
                </tbody>
            </table>

            <!-- Bench List table -->
            <table id="bench-list-table" class="table">
                <thead>
                    <tr>
                        <td>
                            <label for="seats-min-select">Min. Seats</label>
                            <select id="seats-min-select">
                                <option value="0">All</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                            </select>
                        </td>
                        <td>
                            <label for="seats-max-select">Max. Seats</label>
                            <select id="seats-max-select"></select>
                        </td>
                    </tr>
                </thead>
                <tbody id="bench-list">
                </tbody>
            </table>
        </div>
    </div>
</div>
