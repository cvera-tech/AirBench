
@{
    ViewBag.Title = "Test";
}

<h2>Test</h2>

<div id="map" class="map">
</div>
<div id="popup" class="popup">
    <!-- <a href="#" id="popup-closer"></a> -->
    <!-- <div id="popup-content"></div> -->
</div>

@section Scripts {
    <script src="~/Scripts/OpenLayers/ol.js"></script>
    <script src="~/Scripts/map-data.js"></script>
    <script src="~/Scripts/map.js"></script>
}

@section Stylesheets {
    <link rel="stylesheet" href="~/Scripts/OpenLayers/ol.css" type="text/css" />
    <style>
        .map {
            height: 400px;
            width: 100%;
        }

        .popup {
            position: absolute;
            background-color: white;
            -webkit-filter: drop-shadow(0 1px 4px rgba(0,0,0,0.2));
            filter: drop-shadow(0 1px 4px rgba(0,0,0,0.2));
            padding: 15px;
            border-radius: 10px;
            border: 1px solid;
            bottom: 12px;
            left: -50px;
        }

        .popup:after, .popup:before {
            top: 100%;
            border: solid transparent;
            content: " ";
            height: 0;
            width: 0;
            position: absolute;
            pointer-events: none;
        }

        .popup:after {
            border-top-color: white;
            border-width: 10px;
            left: 48px;
            margin-left: -10px;
        }

        .popup:before {
            border-top-color: black;
            border-width: 11px;
            left: 48px;
            margin-left: -11px;
        }
    </style>
}